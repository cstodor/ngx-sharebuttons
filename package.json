{
  "name": "@ngx-sharebuttons/demo",
  "version": "5.3.1",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "start-demo": "cd demo && ng serve --aot",
    "sass": "node .config/styles.js",
    "set-version": "node .config/build.js",
    "build-all": "npm run build-core && npm run build-button && npm run build-buttons && npm run sass && npm run set-version",
    "build-core": "ng-packagr -p lib/core/ng-package.json",
    "build-button": "ng-packagr -p lib/button/ng-package.json",
    "build-buttons": "ng-packagr -p lib/buttons/ng-package.json",
    "publish-all": "node .config/publish.js",
    "build:ssr": "npm run build:client-and-server-bundles && npm run webpack:server",
    "serve:ssr": "node dist/server.js",
    "build-and-serve:ssr": "npm run build:ssr && npm run serve:ssr",
    "build:client-and-server-bundles": "ng build --prod && ng build --prod --app 1 --output-hashing=false",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "link-core": "npm run set-version && npm link build/core && npm link @ngx-share/core",
    "link-button": "npm run set-version && npm link build/button && npm link @ngx-share/button"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "5.2.9",
    "@angular/common": "5.2.9",
    "@angular/compiler": "5.2.9",
    "@angular/core": "5.2.9",
    "@angular/forms": "5.2.9",
    "@angular/http": "5.2.9",
    "@angular/platform-browser": "5.2.9",
    "@angular/platform-browser-dynamic": "5.2.9",
    "@angular/platform-server": "^5.2.9",
    "@angular/router": "5.2.9",
    "@fortawesome/angular-fontawesome": "^0.1.0-8",
    "@fortawesome/fontawesome-svg-core": "^1.2.0-10",
    "@fortawesome/free-brands-svg-icons": "5.1.0-7",
    "@fortawesome/free-solid-svg-icons": "5.1.0-7",
    "classlist.js": "^1.1.20150312",
    "core-js": "^2.4.1",
    "rxjs": "^5.5.2",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "^1.7.3",
    "@angular/compiler-cli": "^5.2.9",
    "@angular/language-service": "5.2.9",
    "@nguniversal/module-map-ngfactory-loader": "^5.0.0-beta.6",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "autoprefixer": "^7.2.5",
    "codelyzer": "^4.0.1",
    "cssnano": "^3.10.0",
    "gulp-util": "^3.0.8",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "mkdirp": "^0.5.1",
    "ng-packagr": "^10.1.1",
    "node-sass": "^4.7.2",
    "postcss": "^6.0.17",
